<Window x:Class="ImageDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageDownloader"
        mc:Ignorable="d"
        Title="Image Downloader" Height="600" Width="800">
    <DockPanel>
        <TextBox x:Name="urlTextBox" Text="https://www.inf.elte.hu/" DockPanel.Dock="Top" />
        <Button x:Name="loadButton" Content="Képek betöltése" DockPanel.Dock="Top" Click="StartLoadAsync" />
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="imageCountLabel" Text="Képek száma:" />
            <TextBlock x:Name="imageCountValue" Text="0" />
            <ProgressBar x:Name="loadProgressBar" Height="10" Width="200" Visibility="Hidden" />
        </StatusBar>
        <ScrollViewer>
            <WrapPanel x:Name="picturePanel"></WrapPanel>
        </ScrollViewer>
    </DockPanel>
</Window>