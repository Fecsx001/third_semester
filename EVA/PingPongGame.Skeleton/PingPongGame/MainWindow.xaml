<Window x:Class="PingPongGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPongGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.InputBindings>
        <KeyBinding Command="{Binding MovePadCommand}"
                    CommandParameter="Right" Key="Right" />
        <KeyBinding Command="{Binding MovePadCommand}"
                    CommandParameter="Left" Key="Left"/>

        <KeyBinding Command="{Binding StartGameCommand}" Key="Space" />
    </Window.InputBindings>
    
    <Grid Background="White" Height="{Binding GridSize.Height, Mode=OneTime}" Width="{Binding GridSize.Width, Mode=OneTime}">
        <Ellipse Fill="Blue" 
                 Stroke="Black" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top" 
                 Margin="{Binding BallStartPosition, Mode=OneWay}" 
                 Height="{Binding BallSize.Height, Mode=OneTime}" 
                 Width="{Binding BallSize.Width, Mode=OneTime}" 
                 Name="Ellipse"
                 LayoutUpdated="OnBallLayoutUpdated">
        </Ellipse>
        
        <Rectangle Fill="Black"
                   Stroke="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="{Binding PadStartPosition, Mode=OneWay}"
                   Height="{Binding PadSize.Height, Mode=OneTime}"
                   Width="{Binding PadSize.Width, Mode=OneTime}"
                   Name="Rectangle"
                   LayoutUpdated="OnPadLayoutUpdated">
            
        </Rectangle>
        
    </Grid>
</Window>
